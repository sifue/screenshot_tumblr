{
  "name": "スクショタンブラー！",
  "version": "1.0.0",
  "description": "ブラウザのスクリーンショットを撮って、引用サービスのtumblrにコピーできる画像を生成します。",
  "background": {
    "persistent": false,
    "page": "background.html"
  },
  "browser_action": {
     "default_icon": "camera_tumblr.png",
     "default_title": "スクリーンショットをtumblrに投稿する"
  },
  "permissions": [
      "tabs",
      "http://*/*",
      "https://*/*"
  ],
  "icons" : {
      "16": "camera_tumblr.png",
      "48" : "camera_tumblr-48.png",
      "128" : "camera_tumblr-128.png"
  },
  "manifest_version": 2
}
